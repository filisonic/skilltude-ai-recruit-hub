# Server Configuration
PORT=3001
NODE_ENV=development

# File Storage
UPLOAD_DIR=./uploads/cvs
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Email Service Configuration
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM_ADDRESS=noreply@skilltude.com
EMAIL_FROM_NAME=SkillTude Team

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# AWS SES Configuration (if using AWS SES)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Mailgun Configuration (if using Mailgun)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user_here
SMTP_PASS=your_smtp_password_here

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=skilltude_db
DB_USER=your_db_user_here
DB_PASSWORD=your_db_password_here

# Security
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=5
JWT_SECRET=your_jwt_secret_here

# Analysis Configuration
EMAIL_DELAY_HOURS=24
MIN_CV_SCORE=0
MAX_CV_SCORE=100

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Admin Configuration
ADMIN_EMAIL=admin@skilltude.com
